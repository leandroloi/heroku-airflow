{
  "name": "Airflow Heroku",
  "description": "Run Airflow on Heroku",
  "image": "heroku/heroku:18",
  "env": {
     "AIRFLOW_GPL_UNIDECODE": {
      "description": "airflow gpl",
      "value": "yes"
    },
    "AIRFLOW_HOME": {
      "description": "Where all the information for airflow lives",
      "value": "/app"
    },
    "AIRFLOW_SECRET_KEY": {
      "description": "A secret key to verify the integrity of signed cookies",
      "generator": "secret"
    },
    "PYTHONPATH": {
      "description": "Path for python",
      "value": "/app"
    }
  },
  "scripts": {
    "postdeploy": "./init_env"
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "mailgun:starter"
  ],
   "buildpacks": [
    { "url": "https://github.com/cloudfoundry/python-buildpack.git" }
  ]
}
